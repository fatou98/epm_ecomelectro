{% extends 'dashboard/index.html.twig' %}

{% block title %}User index{% endblock %}

{% block bodydash %}
<div class="container">
<div class="row">

    <h1 class="col-9">User index</h1>
<div class="col-2">
    <a class="btn btn-primary" href="{{ path('user_new') }}">Create new</a>

</div>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>IsVerified</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Adress</th>
                <th>MobileNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.adress }}</td>
                <td>{{ user.mobileNumber }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a  class="btn btn-success" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
