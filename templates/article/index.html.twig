{% extends 'dashboard/index.html.twig' %}

{% block title %}Article index{% endblock %}

{% block bodydash %}
<div class="row">

    <h1 class="col-9">Article index</h1>
<div class="col-2">
    <a class="btn btn-primary" href="{{ path('article_new') }}">Create new</a>

</div>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Reference</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.reference }}</td>
                <td>{{ article.designation }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a class="btn btn-success" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
